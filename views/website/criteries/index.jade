extends ../layout
block content-team

  h2 Criteries
  p
    div.form-inline(id='form-name')
      ul.list-inline
        li
          div.form-group
            label(for="InputNameCritery criteryname") Name 
            input.form-control(type="text", name="name", placeholder="critery name", id='InputNameCritery', required='')
         li  
          button.btn.btn-default(type="submit", id='btn-add-critery') Add critery
      ul.list-inline
        li
          div.form-group
            label(for="InputPreCritery") Pre-Time (s)
            input.form-control(type="number", min="0", name="pre_time", placeholder="(s)", id='InputPreCritery', required='', value="0")
        li
          div.form-group
            label(for="InputPostCritery") Post-Time (s)
            input.form-control(type="number", min="0", name="post_time", placeholder="(s)", id='InputPostCritery', required='', value="0")
      ul.list-inline
        li
          input(type='radio', name='position', value='no', checked='true', id="position")
          |  No
        li
          input(type='radio', name='position', value='xy', id="position")
          |  (x, y)
        li
          input(type='radio', name='position', value='xyz', id="position")
          |  (x, y, z)
        li
          ul.list-inline
            li
              input(type='checkbox', name='time-critery', id="critery-time-diff-check", value='off')
              |  Diferencia Tiempo:
            li
              select(class="form-control", id="critery-time-diff")
                -each item in criteries
                  option(id="#{item._id}", value="#{item._id}") #{item.name}
      div.form-group
        textarea(name="criterydescription", placeholder="critery description", required='', id='InputDescrCritery')
  -if(criteries.length >= 0)
    table.table.table-condensed(id='table-critery')
      thead(id="CriteryTitle")
        tr
          td Name
          td Pre-Time
          td Post-Time
          td Type
          td
      tbody
        -each item in criteries
          tr(id='row_critery-#{item._id}')
            td(id='name_critery-#{item._id}') #{item.name}

            td(id='name_critery-#{item._id}') #{item.pre_time}
            
            td(id='name_critery-#{item._id}') #{item.post_time}

            td(id='name_critery-#{item._id}') #{item.type}
            
            td 
              a(href="/api/showcriteries/#{item._id}", class='btn btn-info showcritery', id='btn-show', idmongo='#{item._id}') Show
  -else
    p No existen criteries creados

  p 
    a(href="/") Return
